@inject Microsoft.Extensions.Options.IOptions<Template.Config.SiteSettings> SiteSettings
@{
    @if (SiteSettings.Value.NavigationLoginEnabled == false)
    {
        Layout = "/Views/Shared/_LayoutNoNavigation.cshtml";
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="auth-container">
    <div class="card">
        @if (SiteSettings.Value.NavigationLoginEnabled == false)
        {
            <header class="auth-header">
                <h3 class="text-dark">
                    <partial name="_Logo" />
                </h3>
            </header>
        }
        <div class="auth-content">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
     @RenderSection("Scripts", required: false)
}