<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Template</title>

    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/bootstrap-vue/dist/bootstrap-vue.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <<link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap/dist/css/bootstrap.min.css" />
        <link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.css" />
    </environment>
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body>
    <div class="app header-fixed sidebar-fixed">
        <header class="header">
            <div class="header-block header-block-collapse d-lg-none d-xl-none">
                <button class="collapse-btn" id="sidebar-collapse-btn">
                    <i class="fa fa-bars"></i>
                </button>
            </div>
            <div class="header-block header-block-nav">
                <partial name="_LoginPartial" />
            </div>
        </header>
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="brand">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="logo">
                            <span class="l l1"></span>
                            <span class="l l2"></span>
                            <span class="l l3"></span>
                            <span class="l l4"></span>
                            <span class="l l5"></span>
                        </div> Modular Admin
                    </a>
                </div>
            </div>
            <nav class="menu">
                <ul class="sidebar-menu metismenu" id="sidebar-menu">
                    <li class="active">
                        <a href="index.html">
                            <i class="fa fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">X-Privacy</a>
                    </li>
                </ul>
            </nav>
        </aside>
        <article class="content dashboard-page">
            <partial name="_CookieConsentPartial" />
            <section role="main" class="pb-3">
                @RenderBody()
            </section>
        </article>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2018 - Template - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <environment include="Development">
        <script src="~/lib/vue/dist/vue.js"></script>
        <script src="~/lib/babel-polyfill/dist/polyfill.min.js"></script>
        <script src="~/lib/bootstrap-vue/dist/bootstrap-vue.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="//cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.min.js"></script>
        <script src="//unpkg.com/babel-polyfill@latest/dist/polyfill.mins.js"></script>
        <script src="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.min.js"></script>
    </environment>
    <script src="~/js/app.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
